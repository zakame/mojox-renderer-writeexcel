#!/usr/bin/env perl

use Mojolicious::Lite;
use MojoX::Renderer::WriteExcel;

app->types->type(xls => 'application/vnd.ms-excel');
app->renderer->add_handler(xls => MojoX::Renderer::WriteExcel->new);

get '/demo.xls' => sub {
    my $self = shift;
    $self->render(
        handler => 'xls',
        heading => [qw(Firstname Middle LastName)],
        result => [
            [qw(Zak B Elep)],
            [qw(Joel T Tanangonan)],
            [qw(Jerome S Gotangco)],
        ],
    );
};

app->start;
